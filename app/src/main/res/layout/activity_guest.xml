<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="always">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Guest"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/guestBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/rectangle"

            android:contentDescription="@string/guestpage"
            android:scaleType="fitEnd"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/guestImage"
            android:layout_width="90dp"
            android:layout_height="96dp"
            android:layout_marginTop="136dp"
            android:background="@drawable/white"
            android:contentDescription="@string/guestimageamge"
            android:scaleType="centerInside"

            app:layout_constraintBottom_toBottomOf="@+id/guestBanner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.107" />

        <ImageView
            android:id="@+id/textBackground"
            android:layout_width="0dp"
            android:layout_height="319dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/no"
            android:paddingStart="2dp"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guestBanner"
            app:layout_constraintVertical_chainStyle="spread" />


        <TextView
            android:id="@+id/textStockMoney"
            android:layout_width="326dp"
            android:layout_height="62dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="16dp"

            android:paddingStart="10dp"
            android:text="welcome_to_stock_money"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guestBanner"
            tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry" />

        <TextView
            android:id="@+id/briefStockMoney"
            android:layout_width="326dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"

            android:paddingStart="10dp"
            android:text="@string/an_easy_to_use_online_stock_market_prediction_application_just_search_the_company_below_and_we_will_tell_you_the_prediction_value_of_that_company_in_the_near_future"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/searchBarOfGuest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textStockMoney"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/searchBarOfGuest"
            android:layout_width="335dp"
            android:layout_height="62dp"
            android:layout_marginBottom="50dp"
            android:autofillHints="@string/no"
            android:background="@drawable/guest_search_button"

            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBackground"
            app:layout_constraintVertical_bias="0.188"
            tools:ignore="HardcodedText,LabelFor" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
