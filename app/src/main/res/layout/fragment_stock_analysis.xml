<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/analysisRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/analysisProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/analysisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analysisTitle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#392511"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="80dp" />

        <TextView
            android:id="@+id/chartSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forecast"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#555d50"
            android:layout_marginBottom="8dp" />

        <!-- Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/forecastChart"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:layout_marginBottom="20dp" />

        <!-- Recommendation Message -->
        <TextView
            android:id="@+id/recommendationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#392511"
            android:gravity="center_horizontal"
            android:paddingTop="8dp" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/analysisOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBFFFFFF"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="Getting your analysis ready..."
                android:textColor="#444444"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>

