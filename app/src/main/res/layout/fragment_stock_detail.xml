<!--                android:layout_width="150dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:background="#565c50" />-->

<!--            &lt;!&ndash; Card 2 &ndash;&gt;-->
