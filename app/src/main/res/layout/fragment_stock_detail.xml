<!--                android:layout_width="150dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:background="#565c50" />-->



<!--        </LinearLayout>-->
    </HorizontalScrollView>

        <!-- Analyst Ratings Title -->
        <TextView
            android:id="@+id/analystRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/analyst_rating"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/recommendationScroll"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Circle + Bars container -->
        <LinearLayout
            android:id="@+id/analystRatingContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/analystRating"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Circular Buy Percentage -->
            <TextView
                android:id="@+id/maxOf"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_dark_green"
                android:text="@string/max_rating"
                android:gravity="center"
                android:textColor="#565c50"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

            <!-- Progress Bars -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Buy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBuy"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="12dp"
                        android:progress="61"
                        android:max="100"
                        android:progressTint="#565c50"
                        android:backgroundTint="#404040" />

                    <TextView
                        android:id="@+id/tvBuyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/buy_rating"
                        android:textColor="#565c50"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Hold -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressHold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="12dp"
                        android:progress="29"
                        android:max="100"
                        android:progressTint="@color/black"
                        android:backgroundTint="#404040" />

                    <TextView
                        android:id="@+id/tvHoldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hold_rating"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Sell -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressSell"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="12dp"
                        android:progress="10"
                        android:max="100"
                        android:progressTint="#FF3D00"
                        android:backgroundTint="#404040" />

                    <TextView
                        android:id="@+id/tvSellLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sell_rating"
                        android:textColor="#FF3D00"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>